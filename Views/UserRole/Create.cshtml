@model MediaPlus.Models.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "«÷«›… ’·«ÕÌ…";
}

<style>
    .main-content {
        width: -webkit-fill-available;
    }
</style>
<div class="container " style="width: 100%;">
    <div class="row justify-content-center">
        <div class="col-md-12 col-lg-12 col-sm-12">
            <form asp-action="Create" asp-controller="UserRole" enctype="multipart/form-data" class="p-4 border rounded shadow-sm bg-light">

                <div class="row g-3">

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="RoleNameAr" class="form-control" placeholder="@Localizer["namear"]" />
                            <label asp-for="RoleNameAr">@Localizer["namear"]</label>
                        </div>
                        <span asp-validation-for="RoleNameAr" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="RoleNameEn" class="form-control" placeholder="@Localizer["nameer"]" />
                            <label asp-for="RoleNameEn">@Localizer["nameer"]</label>
                        </div>
                        <span asp-validation-for="RoleNameEn" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row">
                    <div class="col-md-6 d-grid">
                        <button type="submit" class="btn btn-success">
                            @Localizer["submit"]
                        </button>
                    </div>
                    <div class="col-md-6 d-grid mb-2 mb-md-0">
                        <a asp-action="Index" asp-controller="UserRole" class="btn btn-outline-primary">
                            @Localizer["return"]
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
