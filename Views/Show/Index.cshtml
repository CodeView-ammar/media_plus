    <script>
        function ToggleShow(CustId) {
            var elem = document.getElementById("ToggleForm");
            var elemValue = elem.getAttribute('action').split('/');
            var newhref = '/' + elemValue[1] + '/' + elemValue[2] + '/' + CustId;
            elem.setAttribute("action", newhref);

            //  ‰›Ì– «·⁄„·Ì… „»«‘—…
            elem.submit(); // √Ê Ì„ﬂ‰ﬂ «” Œœ«„ fetch/AJAX · ‰›Ì– «·⁄„·Ì… Õ”» «·Õ«Ã…
        }
