
@using System.Text.Json
@using MediaPlus.Services

@{
    var _isEnglishCulture = Context.Request.Cookies[".AspNetCore.Culture"] == "c=en-US|uic=en-US";
    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<!DOCTYPE html>
<html lang="@(_isEnglishCulture ? "en" : "ar")" dir="@(_isEnglishCulture ? "ltr" : "rtl")">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="SmartScreen - نظام إدارة الشاشات الرقمية الذكية المتطور">
    <meta name="author" content="SmartScreen Technologies">
    <meta name="keywords" content="شاشات ذكية, إدارة المحتوى الرقمي, الإعلان الرقمي, SmartScreen">
    <title>@ViewData["Title"] - SmartScreen Pro</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    
    <!-- AOS Animation CSS -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
    
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
    
    <!-- Custom Styles -->
    <style>
        :root {
            --primary-color: #667eea;
            --primary-dark: #5a67d8;
            --primary-light: #a5b4fc;
            --secondary-color: #764ba2;
            --accent-color: #f093fb;
            --accent-secondary: #4facfe;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #06b6d4;
            --light-color: #f8fafc;
            --dark-color: #1a202c;
            --gray-color: #718096;
            --gray-light: #e2e8f0;
            --white-color: #ffffff;
            --shadow-color: rgba(102, 126, 234, 0.15);
            --gradient-primary: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            --gradient-accent: linear-gradient(135deg, var(--accent-secondary) 0%, var(--accent-color) 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: @(_isEnglishCulture ? "'Inter', 'Poppins', sans-serif" : "'Cairo', sans-serif");
            line-height: 1.6;
            color: var(--dark-color);
            overflow-x: hidden;
            background: #fafbff;
        }

        /* Header Styles */
        .navbar {
            background: rgba(255, 255, 255, 0.95) !important;
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(102, 126, 234, 0.1);
            padding: 1rem 0;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .navbar.scrolled {
            background: rgba(255, 255, 255, 0.98) !important;
            box-shadow: 0 8px 40px rgba(102, 126, 234, 0.12);
        }

        .navbar-brand {
            font-size: 2.2rem;
            font-weight: 900;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.5px;
        }

        .nav-link {
            font-weight: 600;
            color: var(--dark-color) !important;
            transition: all 0.3s ease;
            position: relative;
            padding: 0.7rem 1.2rem !important;
            border-radius: 8px;
            margin: 0 0.2rem;
        }

        .nav-link:hover {
            color: var(--primary-color) !important;
            background: rgba(102, 126, 234, 0.08);
            transform: translateY(-2px);
        }

        /* Hero Section */
        .hero-section {
            min-height: 100vh;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

        .hero-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grain" width="100" height="100" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="1" fill="rgba(255,255,255,0.05)"/><circle cx="75" cy="25" r="1" fill="rgba(255,255,255,0.05)"/><circle cx="50" cy="50" r="1" fill="rgba(255,255,255,0.05)"/><circle cx="25" cy="75" r="1" fill="rgba(255,255,255,0.05)"/><circle cx="75" cy="75" r="1" fill="rgba(255,255,255,0.05)"/></pattern></defs><rect width="100" height="100" fill="url(%23grain)"/></svg>') repeat;
            opacity: 0.3;
        }

        .hero-floating-elements {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .floating-screen {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            animation: float 6s ease-in-out infinite;
        }

        .floating-screen:nth-child(1) {
            width: 80px;
            height: 50px;
            top: 20%;
            right: 10%;
            animation-delay: 0s;
        }

        .floating-screen:nth-child(2) {
            width: 60px;
            height: 40px;
            top: 60%;
            right: 20%;
            animation-delay: 2s;
        }

        .floating-screen:nth-child(3) {
            width: 100px;
            height: 60px;
            top: 80%;
            left: 15%;
            animation-delay: 4s;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(3deg); }
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-title {
            font-size: 4.5rem;
            font-weight: 900;
            color: white;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            letter-spacing: -1px;
        }

        .hero-subtitle {
            font-size: 1.8rem;
            color: rgba(255, 255, 255, 0.95);
            margin-bottom: 2rem;
            font-weight: 400;
        }

        .hero-description {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.85);
            margin-bottom: 3rem;
            line-height: 1.8;
            max-width: 90%;
        }

        /* Button Styles */
        .btn-primary-custom {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(255, 255, 255, 1));
            color: var(--primary-color);
            border: none;
            padding: 1.2rem 3rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 50px;
            transition: all 0.3s ease;
            box-shadow: 0 12px 35px rgba(255, 255, 255, 0.3);
            position: relative;
            overflow: hidden;
        }

        .btn-primary-custom:hover {
            transform: translateY(-3px);
            box-shadow: 0 18px 50px rgba(255, 255, 255, 0.4);
            background: white;
            color: var(--primary-color);
        }

        .btn-outline-custom {
            background: transparent;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.6);
            padding: 1.2rem 3rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 50px;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .btn-outline-custom:hover {
            background: rgba(255, 255, 255, 0.15);
            border-color: white;
            transform: translateY(-3px);
            color: white;
            box-shadow: 0 12px 35px rgba(255, 255, 255, 0.2);
        }

        /* Features Section */
        .features-section {
            padding: 120px 0;
            background: linear-gradient(135deg, #fafbff 0%, #f1f5f9 100%);
            position: relative;
        }

        .section-header {
            text-align: center;
            margin-bottom: 5rem;
        }

        .section-title {
            font-size: 3.5rem;
            font-weight: 800;
            color: var(--dark-color);
            margin-bottom: 1.5rem;
            position: relative;
            letter-spacing: -1px;
        }

        .section-subtitle {
            font-size: 1.3rem;
            color: var(--gray-color);
            margin-bottom: 3rem;
            line-height: 1.8;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .feature-card {
            background: white;
            padding: 3.5rem 2.5rem;
            border-radius: 24px;
            box-shadow: 0 15px 50px rgba(102, 126, 234, 0.08);
            transition: all 0.4s ease;
            border: 1px solid rgba(102, 126, 234, 0.08);
            height: 100%;
            position: relative;
            overflow: hidden;
        }

        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .feature-card:hover::before {
            transform: scaleX(1);
        }

        .feature-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 70px rgba(102, 126, 234, 0.15);
            border-color: var(--primary-color);
        }

        .feature-icon {
            width: 90px;
            height: 90px;
            background: var(--gradient-primary);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2.5rem;
            color: white;
            font-size: 2.2rem;
            position: relative;
        }

        .feature-icon::after {
            content: '';
            position: absolute;
            inset: -2px;
            background: var(--gradient-primary);
            border-radius: inherit;
            z-index: -1;
            opacity: 0.3;
            filter: blur(8px);
        }

        .feature-title {
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 1.2rem;
        }

        .feature-description {
            color: var(--gray-color);
            line-height: 1.8;
            font-size: 1.05rem;
        }

        /* SmartScreen Capabilities Section */
        .capabilities-section {
            padding: 120px 0;
            background: white;
            position: relative;
        }

        .capability-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2.5rem;
            margin-top: 4rem;
        }

        .capability-item {
            padding: 2.5rem;
            border-radius: 20px;
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            transition: all 0.3s ease;
            border: 1px solid rgba(102, 126, 234, 0.1);
        }

        .capability-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 60px rgba(102, 126, 234, 0.12);
        }

        .capability-icon {
            width: 70px;
            height: 70px;
            background: var(--gradient-accent);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
        }

        .capability-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 1rem;
        }

        .capability-description {
            color: var(--gray-color);
            line-height: 1.7;
        }

        /* Stats Section */
        .stats-section {
            padding: 120px 0;
            background: var(--gradient-primary);
            position: relative;
            overflow: hidden;
        }

        .stats-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><pattern id="dots" width="50" height="50" patternUnits="userSpaceOnUse"><circle cx="25" cy="25" r="2" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="1000" height="1000" fill="url(%23dots)"/></svg>') repeat;
        }

        .stat-item {
            text-align: center;
            color: white;
            position: relative;
            z-index: 2;
        }

        .stat-number {
            font-size: 4rem;
            font-weight: 900;
            margin-bottom: 0.5rem;
            display: block;
        }

        .stat-label {
            font-size: 1.3rem;
            font-weight: 500;
            opacity: 0.95;
        }

        /* Use Cases Section */
        .use-cases-section {
            padding: 120px 0;
            background: linear-gradient(135deg, #fafbff 0%, #f1f5f9 100%);
        }

        .use-case-card {
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 15px 50px rgba(102, 126, 234, 0.08);
            transition: all 0.4s ease;
            height: 100%;
        }

        .use-case-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 70px rgba(102, 126, 234, 0.15);
        }

        .use-case-image {
            height: 250px;
            background: var(--gradient-primary);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 4rem;
            position: relative;
        }

        .use-case-content {
            padding: 2.5rem;
        }

        .use-case-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 1rem;
        }

        .use-case-description {
            color: var(--gray-color);
            line-height: 1.8;
            margin-bottom: 1.5rem;
        }

        .use-case-features {
            list-style: none;
            padding: 0;
        }

        .use-case-features li {
            padding: 0.5rem 0;
            color: var(--gray-color);
            position: relative;
            padding-left: 1.5rem;
        }

        .use-case-features li::before {
            content: '✓';
            position: absolute;
            left: 0;
            color: var(--success-color);
            font-weight: bold;
        }

        /* Contact Section */
        .contact-section {
            padding: 120px 0;
            background: white;
        }

        .contact-form {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            padding: 4rem;
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(102, 126, 234, 0.1);
            border: 1px solid rgba(102, 126, 234, 0.08);
        }

        .form-control {
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.2rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background: white;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            outline: none;
        }

        /* Footer */
        .footer {
            background: var(--dark-color);
            color: white;
            padding: 80px 0 40px;
            position: relative;
        }

        .footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 1px;
            background: var(--gradient-primary);
        }

        .footer-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: white;
        }

        .footer-link {
            color: rgba(255, 255, 255, 0.7);
            text-decoration: none;
            transition: all 0.3s ease;
            display: block;
            margin-bottom: 0.8rem;
            padding: 0.3rem 0;
        }

        .footer-link:hover {
            color: var(--primary-light);
            transform: translateX(@(_isEnglishCulture ? "8px" : "-8px"));
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .social-link {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .social-link:hover {
            background: var(--gradient-primary);
            transform: translateY(-3px);
            color: white;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .hero-title {
                font-size: 3rem;
            }
            
            .hero-subtitle {
                font-size: 1.4rem;
            }
            
            .section-title {
                font-size: 2.5rem;
            }
            
            .feature-card, .use-case-card {
                margin-bottom: 2rem;
            }

            .stat-number {
                font-size: 3rem;
            }

            .contact-form {
                padding: 2.5rem;
            }
        }

        /* RTL Styles */
        @@if (!_isEnglishCulture) {
            .hero-content, .section-header {
                text-align: right;
            }
            
            .feature-card, .capability-item, .use-case-content {
                text-align: right;
            }
        }

        /* Loading Animation */
        .loading-shimmer {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
        }

        @@keyframes shimmer {
            0% { background-position: -200% 0; }
            100% { background-position: 200% 0; }
        }

        /* Scroll to top button */
        .scroll-to-top {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 50px;
            height: 50px;
            background: var(--gradient-primary);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-decoration: none;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .scroll-to-top.visible {
            opacity: 1;
            visibility: visible;
        }

        .scroll-to-top:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
            color: white;
        }
    </style>
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#home">
                <i class="fas fa-desktop me-2"></i>SmartScreen Pro
            </a>
            
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <i class="fas fa-bars text-primary"></i>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#home">@(_isEnglishCulture ? "Home" : "الرئيسية")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#features">@(_isEnglishCulture ? "Features" : "المميزات")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#capabilities">@(_isEnglishCulture ? "Capabilities" : "الإمكانيات")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#use-cases">@(_isEnglishCulture ? "Use Cases" : "حالات الاستخدام")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">@(_isEnglishCulture ? "Contact" : "تواصل معنا")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary-custom text-white px-4 ms-2" asp-controller="Account" asp-action="Login">
                            <i class="fas fa-sign-in-alt me-2"></i>@(_isEnglishCulture ? "Admin Panel" : "لوحة الإدارة")
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section id="home" class="hero-section">
        <div class="hero-floating-elements">
            <div class="floating-screen"></div>
            <div class="floating-screen"></div>
            <div class="floating-screen"></div>
        </div>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-7" data-aos="fade-up">
                    <div class="hero-content">
                        <h1 class="hero-title">
                            @if (_isEnglishCulture)
                            {
                                <text>Next-Gen Smart Screen Management Platform</text>
                            }
                            else
                            {
                                <text>منصة إدارة الشاشات الذكية من الجيل القادم</text>
                            }
                        </h1>
                        <p class="hero-subtitle">
                            @if (_isEnglishCulture)
                            {
                                <text>Revolutionizing Digital Display Control</text>
                            }
                            else
                            {
                                <text>ثورة في التحكم بالشاشات الرقمية</text>
                            }
                        </p>
                        <p class="hero-description">
                            @if (_isEnglishCulture)
                            {
                                <text>SmartScreen Pro delivers advanced digital signage management with AI-powered content optimization, real-time analytics, multi-location support, and cloud-based control for businesses of all sizes.</text>
                            }
                            else
                            {
                                <text>يوفر SmartScreen Pro إدارة متقدمة للافتات الرقمية مع تحسين المحتوى المدعوم بالذكاء الاصطناعي، وتحليلات في الوقت الفعلي، ودعم متعدد المواقع، وتحكم سحابي للشركات من جميع الأحجام.</text>
                            }
                        </p>
                        <div class="d-flex gap-3 flex-wrap">
                            <a href="#features" class="btn btn-primary-custom">
                                <i class="fas fa-rocket me-2"></i>
                                @(_isEnglishCulture ? "Explore Features" : "استكشف المميزات")
                            </a>
                            <a href="#capabilities" class="btn btn-outline-custom">
                                <i class="fas fa-play me-2"></i>
                                @(_isEnglishCulture ? "See Capabilities" : "شاهد الإمكانيات")
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5" data-aos="fade-left" data-aos-delay="200">
                    <div class="text-center">
                        <div style="font-size: 15rem; color: rgba(255,255,255,0.15); line-height: 1;">
                            <i class="fas fa-tv"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features-section">
        <div class="container">
