    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    
    <script>
        // Initialize AOS
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100,
            easing: 'ease-out-back'
        });

        // Navbar scroll effect
        $(window).scroll(function() {
            if ($(this).scrollTop() > 50) {
                $('.navbar').addClass('scrolled');
            } else {
                $('.navbar').removeClass('scrolled');
            }

            // Scroll to top button
            if ($(this).scrollTop() > 300) {
                $('#scrollToTop').addClass('visible');
            } else {
                $('#scrollToTop').removeClass('visible');
            }
        });

        // Smooth scrolling
        $('a[href^="#"]').on('click', function(event) {
            var target = $(this.getAttribute('href'));
            if (target.length) {
                event.preventDefault();
                $('html, body').stop().animate({
                    scrollTop: target.offset().top - 80
                }, 1000, 'easeInOutQuart');
            }
        });

        // Counter animation
        function animateCounter() {
            $('.stat-number').each(function() {
                var $this = $(this);
                var countTo = $this.attr('data-count');
                
                $({ countNum: $this.text() }).animate({
                    countNum: countTo
                }, {
                    duration: 2500,
                    easing: 'easeOutQuart',
                    step: function() {
                        $this.text(Math.floor(this.countNum).toLocaleString());
                    },
                    complete: function() {
                        $this.text(parseInt(this.countNum).toLocaleString());
                    }
                });
            });
        }

        // Trigger counter animation when stats section is in view
        $(window).scroll(function() {
            var statsSection = $('.stats-section');
            if (statsSection.length) {
                var statsTop = statsSection.offset().top;
                var statsHeight = statsSection.height();
                var windowTop = $(window).scrollTop();
                var windowHeight = $(window).height();

                if (windowTop + windowHeight > statsTop && windowTop < statsTop + statsHeight) {
                    if (!statsSection.hasClass('animated')) {
                        statsSection.addClass('animated');
                        animateCounter();
                    }
                }
            }
        });

        // Enhanced form submission
        $('#contactForm').on('submit', function(e) {
            e.preventDefault();
            
            // Add loading state
            var submitBtn = $(this).find('button[type="submit"]');
            var originalText = submitBtn.html();
            submitBtn.html('<i class="fas fa-spinner fa-spin me-2"></i>@(_isEnglishCulture ? "Sending..." : "جاري الإرسال...")').prop('disabled', true);
            
            // Simulate form submission
            setTimeout(function() {
                submitBtn.html('<i class="fas fa-check me-2"></i>@(_isEnglishCulture ? "Message Sent!" : "تم الإرسال!")').removeClass('btn-primary-custom').addClass('btn-success');
                
                setTimeout(function() {
                    submitBtn.html(originalText).prop('disabled', false).removeClass('btn-success').addClass('btn-primary-custom');
                    $('#contactForm')[0].reset();
                    
                    // Show success message
                    if (typeof Swal !== 'undefined') {
                        Swal.fire({
                            icon: 'success',
                            title: '@(_isEnglishCulture ? "Thank you!" : "شكرًا لك!")',
                            text: '@(_isEnglishCulture ? "We will contact you within 24 hours." : "سنتواصل معك خلال 24 ساعة.")',
                            confirmButtonColor: 'var(--primary-color)'
                        });
                    } else {
                        alert('@(_isEnglishCulture ? "Thank you for your message! We will get back to you soon." : "شكرًا لرسالتك! سنتواصل معك قريبًا.")');
                    }
                }, 2000);
            }, 1500);
        });

        // Parallax effect for hero section
        $(window).scroll(function() {
            var scrolled = $(this).scrollTop();
            var parallax = $('.hero-section');
            var speed = scrolled * 0.5;
            parallax.css('transform', 'translateY(' + speed + 'px)');
        });

        // Add easing function
        $.easing.easeInOutQuart = function (x, t, b, c, d) {
            if ((t/=d/2) < 1) return c/2*t*t*t*t + b;
            return -c/2 * ((t-=2)*t*t*t - 2) + b;
        };

        $.easing.easeOutQuart = function (x, t, b, c, d) {
            return -c * ((t=t/d-1)*t*t*t - 1) + b;
        };

        // Preloader
        $(window).on('load', function() {
            $('.preloader').fadeOut('slow');
        });

        // Mobile menu enhancement
        $('.navbar-toggler').on('click', function() {
            $(this).toggleClass('active');
        });

