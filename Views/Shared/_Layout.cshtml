@using System.Text.Json
@using MediaPlus.Services

@{
    var _isEnglishCulture = Context.Request.Cookies[".AspNetCore.Culture"] == "c=en-US|uic=en-US";
    UserSessionModel? currentUser = null; // Initialize to null
    try
    {
        var userObject = Context.Session.GetString("UserObject");
        if (!string.IsNullOrEmpty(userObject))
        {
            currentUser = JsonSerializer.Deserialize<UserSessionModel>(userObject);
        }
    }
    catch (JsonException ex)
    {
        // Log the exception details, handle the error appropriately
        // For example:
        // _logger.LogError(ex, "Error deserializing UserObject from session.");
        currentUser = null; // Ensure currentUser is null in case of error
    }

    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";
}

<!DOCTYPE html>
<html lang="@(_isEnglishCulture ? "en" : "ar")" dir="@(_isEnglishCulture ? "ltr" : "rtl")">

<head>
    <!-- META SECTION -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="MediaPlus - Digital Media Management System">
    <meta name="author" content="Mohamed Saied">

    <title>@ViewData["Title"] - MediaPlus</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css">
    
    @if (!_isEnglishCulture)
    {
        <!-- RTL Support for Bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    }
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- HEADER -->
    <header class="header">
        <nav class="navbar navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <!-- LOGO -->
                <a class="navbar-brand" asp-action="Index" asp-controller="Dashboard">
                    <span class="logo-text">MediaPlus</span>
                </a>
                
                <!-- MOBILE TOGGLE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                
                <!-- TOP NAVBAR -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
                        <!-- LANGUAGE SWITCHER -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="SetLanguage"
                               asp-route-returnUrl="@returnUrl">
                                <i class="fas fa-language"></i>
                                <span class="d-none d-sm-inline ms-2">@Localizer["Change Language"]</span>
                            </a>
                        </li>
                        
                        <!-- NOTIFICATIONS -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="notificationsDropdown" role="button" 
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle">3</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown" aria-labelledby="notificationsDropdown">
                                <li class="dropdown-header">
                                    @Localizer["Notifications"]
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <div class="notification-item">
                                            <div class="icon bg-primary text-white rounded-circle">
                                                <i class="fas fa-user-plus"></i>
                                            </div>
                                            <div class="content">
                                                <p class="message">@Localizer["New user registered"]</p>
                                                <p class="time">5 @Localizer["minutes ago"]</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-center" href="#">
                                        @Localizer["View all notifications"]
                                    </a>
                                </li>
                            </ul>
                        </li>
                        
                        <!-- USER PROFILE -->
                        <partial name="_UserProfilePartial" model="@currentUser" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTAINER -->
    <div class="container-fluid flex-grow-1">
        <div class="row">
            <!-- SIDEBAR -->
            <aside class="sidebar collapse d-lg-block" id="mainSidebar">
                <div class="sidebar-sticky">
                    <partial name="_NavigationPartial" model="@currentUser" />
                </div>
            </aside>

            <!-- MAIN CONTENT -->
            <main class="main-content ms-sm-auto">
                <div class="content-wrapper">
                    <div class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1 class="m-0">@ViewData["Title"]</h1>
                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-end">
                                        <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">@Localizer["Home"]</a></li>
                                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="content">
                        <div class="container-fluid">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="footer mt-auto py-3">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <span class="text-muted">&copy; @DateTime.Now.Year - MediaPlus</span>
                </div>
                <div class="col-md-6 text-end">
                    <span class="text-muted">@Localizer["Version"]: 2.0</span>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <!-- Custom Scripts -->
    <script src="~/js/site.js"></script>
    <script src="~/js/dashboard.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>