@model IEnumerable<MaterialViewModel>

@{
    ViewBag.Title = "Index";
    var currentUser = JsonSerializer.Deserialize<UserSessionModel>(Context.Session.GetString("UserObject")!);
    string[] avaiablePhotoExtension =  { "image/jpg", "image/png" , "image/gif" , "image/jpeg" ,"image/bmp"};
    string[] avaiableVedioExtension =  {".mov", ".wmv" , ".flv" , ".avi" ,".webm",".webm",".mkv",".mp4"};
}

    <!-- BEGIN MAIN CONTENT -->
        <div id="main-content">
            <div class="page-title"> <i class="icon-custom-left"></i>
                <h3 class="text-center"><strong>@Localizer["materials"]</strong></h3>
            </div>
            <br>
            <br>
            @if(currentUser.UserPermissions.Contains("material.create")
                 ){
                <a style="float: left;" asp-action="Create" asp-controller="Material" class="btn btn-primary" role="button">
                    @Localizer["addbutton"]
                    <i class="fa fa-plus"></i>
                </a>
            }
            <br>
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                                    <div id="Print">
                                        <table id="Datatable" class="table table-striped table-hover table-condensed">
                                        <thead class="no-bd">
                                            <tr>
                                                <th><strong>@Localizer["name"]</strong>
                                                </th>
                                                <th><strong>@Localizer["customer"]</strong>
                                                </th>
                                                <th><strong>@Localizer["cdate"]</strong>
                                                </th>
                                                <th><strong>@Localizer["udate"]</strong>
                                                </th>
                                                 @if(currentUser.UserPermissions.Contains("material.update")
                                                 ){
                                                    <th><strong>@Localizer["state"]</strong>
                                                    </th>
                                                }
                                                <th><strong>@Localizer["attachedfile"]</strong>
                                                </th>
                                                @if(currentUser.UserPermissions.Contains("material.update")
                                                || currentUser.UserPermissions.Contains("material.delete")
                                                 ){
                                                    <th><strong>@Localizer["actions"]</strong>
                                                    </th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody class="no-bd-y">
                                                @foreach(var material in Model){
                                                    <tr>
                                                        <td class="text-center">
                                                            @if(@material.MatShowNameAr == "null"){
                                                                @material.MatShowNameEn
                                                            }else{
                                                                @material.MatShowNameAr
                                                            }                                                
                                                        </td>
                                                        <td class="text-center">
                                                            @material.CustomerName
                                                        </td>
                                                        <td class="text-center">
                                                            @material.MatCdate?.ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td class="text-center">
                                                            @material.MatUdate?.ToString("dd/MM/yyyy")
                                                        </td>
                                                @if(currentUser.UserPermissions.Contains("material.update")
                                                 ){
                                                    <td class="text-center">
                                                        @if(material.MatIsactive){
                                                            <button  onclick='ToggleOnAndOff(event,"@material.MatId")'  class="btn btn-sm btn-success" controll="Material" >
                                                                @Localizer["on"]
                                                                <i class="bi bi-power" style="pointer-events: none;"></i>

                                                            </button>
                                                            }else{
                                                            <button onclick='ToggleOnAndOff(event,"@material.MatId")'  class="btn btn-sm btn-danger" controll="Material" >
                                                                @Localizer["off"]
                                                                <i class="bi bi-power" style="pointer-events: none;"></i>

                                                            </button>
                                                        }
                                                    </td>
                                                    }
                                                        <td class="text-center">
                                                            @if (avaiablePhotoExtension.Contains(material.MatFilePath?.Split(",")[1]))
                                                            {
                                                                <a href="/Material/Download/?Id=@(material.MatId)">
                                                                    <img src="~/upload/show_material/@(material.MatFilePath.Split(",")[0])" width="75" height="75" alt="preview" />
                                                                </a>
                                                            }else if(@material.MatFilePath.StartsWith("http")){
                                                                <a target="_blank" class="btn btn-dark" href="@material.MatFilePath" alt="visit hyberlink">Visit Link</a>
                                                            }
                                                            else if(@material.MatFilePath.Contains("txt")){
                                                                <a class="btn btn-dark" href="/Material/Download/?Id=@(material.MatId)" alt="download attached file">
                                                                <i class="bi bi-download"></i>
                                                                @Localizer["discription"]
                                                                </a>
                                                            } else{
                                                                <a class="btn btn-dark" href="/Material/Download/?Id=@(material.MatId)" alt="download attached file">
                                                                <i class="bi bi-download"></i>
                                                                @Localizer["video"]
                                                                </a>
                                                            }
                                                        </td>
                                                        @if(currentUser.UserPermissions.Contains("material.update")
                                                        || currentUser.UserPermissions.Contains("material.delete")
                                                         ){
                                                            <td style="float:left;">
                                                                 @if(currentUser.UserPermissions.Contains("material.update")  ){
                                                                <a asp-action="Edit" asp-controller="Material" asp-route-id="@material.MatId" class="btn btn-primary" type="button">@Localizer["edit"]</a>
                                                                }
                                                                @if(currentUser.UserPermissions.Contains("material.delete")  ){
                                                                <button type="button" id="DeleteButton" onclick="MoveTheIdToModal(@material.MatId)" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                                                    @Localizer["delete"]
                                                                </button>
                                                                }
                                                            </td>
                                                        }
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLabel">@Localizer["confirmdelete"]</h5>
 
      </div>
      <div class="modal-body text-center">
       @Localizer["deletemodalbody"]
      </div>
      <div class="modal-footer">
        <form id="DeleteForm" method="post" asp-action="Delete" asp-controller="Material" asp-route-id="">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["close"]</button>
            <button type="submit" class="btn btn-danger">@Localizer["delete"]</button>
        </form>
        </div>
    </div>
  </div>
</div>

@section Scripts{
    <script>
         function MoveTheIdToModal(CustId){
            var elem = document.getElementById("DeleteForm")
            var elemValue = elem.getAttribute('action').split('/');
            var newhref = '/' + elemValue[1] + '/' + elemValue[2] + '/' + CustId;
            elem.setAttribute("action", newhref); 
        }
    </script>
}


