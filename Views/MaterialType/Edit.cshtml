@model MaterialTypeViewModel

@{
    ViewData["Title"] = Localizer["Edit Material Type"];
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">@Localizer["Edit Material Type"]</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="MaterialType" method="post">
            <input type="hidden" asp-for="MtypeId" />
            <input type="hidden" asp-for="MtypeIsActive" />
            <input type="hidden" asp-for="MtypeCdate" />
            <input type="hidden" asp-for="MtypeUserId" />

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MtypeNameAr" class="form-label">@Localizer["Arabic Name"]</label>
                        <input asp-for="MtypeNameAr" class="form-control" placeholder="@Localizer["Enter material type name in Arabic"]" />
                        <span asp-validation-for="MtypeNameAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="MtypeNameEn" class="form-label">@Localizer["English Name"]</label>
                        <input asp-for="MtypeNameEn" class="form-control" placeholder="@Localizer["Enter material type name in English"]" />
                        <span asp-validation-for="MtypeNameEn" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <hr />
            
            <div class="row">
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left me-1"></i> @Localizer["Back to List"]
                    </a>
                </div>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-save me-1"></i> @Localizer["Save Changes"]
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}