@model IEnumerable<MaterialTypeViewModel>

    <!-- BEGIN MAIN CONTENT -->
        <div id="main-content">
            <div class="page-title"> <i class="icon-custom-left"></i>
                <h3 class="text-center"><strong>@Localizer["Material Type"]</strong></h3>
            </div>
            <br>
            <br>
            <a style="float: left;" asp-action="Create" asp-controller="MaterialType" class="btn btn-primary" role="button">Add New MaterialType
                                <i class="fa fa-plus"></i>
            </a>
            <br>
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                                    <div id="Print">
                                    <table id="Datatable" class="table table-striped table-hover table-condensed">
                                        <thead class="no-bd">
                                            <tr>
                                                <th><strong>@Localizer["name"]</strong>
                                                </th>
                                                <th><strong>@Localizer["username"]</strong>
                                                </th>
                                                <th><strong>@Localizer["customername"]</strong>
                                                </th>
                                                <th><strong>@Localizer["cdate"]</strong>
                                                </th>
                                                <th><strong>@Localizer["udate"]</strong>                                               
                                                </th>
                                                <th><strong>@Localizer["state"]</strong>
                                                </th>
                                                <th><strong>@Localizer["actions"]</strong>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody class="no-bd-y">
                                                @foreach(var MaterialType in Model){
                                                    <tr>
                                                        <td class="text-center">
                                                            @if(@MaterialType.MtypeNameAr == "null"){
                                                                @MaterialType.MtypeNameEn 
                                                            }else{
                                                                @MaterialType.MtypeNameAr
                                                            }                                                
                                                        </td>
                                                        <td class="text-center">
                                                            @MaterialType.UserName
                                                        </td>
                                                        <td class="text-center">
                                                            @MaterialType.CustomerName
                                                        </td>
                                                        <td class="text-center">
                                                            @MaterialType.MtypeCdate?.ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td class="text-center">
                                                            @MaterialType.MtypeUdate?.ToString("dd/MM/yyyy")
                                                        </td>
                                                        <td class="text-center">
                                                            @if(@MaterialType.MtypeIsActive){
                                                                <p>Active</p>
                                                            }else {
                                                                <p>InActive</p>
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            <a asp-action="Edit" asp-controller="MaterialType" asp-route-id="@MaterialType.MtypeId" class="btn btn-primary" type="button">Edit</a>
 | 
                                                            <button type="button" id="DeleteButton" onclick="MoveTheIdToModal(@MaterialType.MtypeId)" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                                                                Delete
                                                            </button>
                                                        </td>
                                                    </tr>
                                                }
                                        </tbody>
                                    </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title text-center" id="exampleModalLabel">!Confirm Delete</h5>
 
      </div>
      <div class="modal-body text-center">
       ?Are you sure to delete this MaterialType
      </div>
      <div class="modal-footer">
        <form id="DeleteForm" method="get" asp-action="Delete" asp-controller="MaterialType" asp-route-id="">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        </div>
    </div>
  </div>
</div>



@section Scripts{
    <script>
          function MoveTheIdToModal(CustId){
            var elem = document.getElementById("DeleteForm")
            var elemValue = elem.getAttribute('action').split('/');
            var newhref = '/' + elemValue[1] + '/' + elemValue[2] + '/' + CustId;
            elem.setAttribute("action", newhref); 
        }
    </script>
}